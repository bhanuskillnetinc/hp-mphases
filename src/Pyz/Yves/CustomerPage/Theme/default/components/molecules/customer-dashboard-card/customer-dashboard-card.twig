{% extends model('component') %}

{% define config = {
    name: 'customer-dashboard-card'
} %}

{% define data = {
    url: required,
    title: required,
    description: '',
    image: ''
} %}

{% block class %}
    {{ parent() }} customer-dashboard-card
{% endblock %}

{% block body %}
    <a href="{{ data.url }}" class="customer-dashboard-card__link">
        <div class="customer-dashboard-card__body">
            <div class="customer-dashboard-card__content">
                <h5 class="customer-dashboard-card__title">{{ data.title }}</h5>
                {% if data.description %}
                    <p class="customer-dashboard-card__description">{{ data.description }}</p>
                {% endif %}
            </div>
            {% if data.image %}
                <div class="customer-dashboard-card__icon">
                    <img src="{{ data.image }}" alt="{{ data.title }}">
                </div>
            {% endif %}
        </div>
    </a>
{% endblock %}
