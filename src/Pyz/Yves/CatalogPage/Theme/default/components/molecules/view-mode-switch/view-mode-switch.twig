{% extends molecule('view-mode-switch', '@SprykerShop:CatalogPage') %}

{% define data = {
    viewMode: '',
} %}

{% block body %}
    {% set gridViewActiveClass = data.viewMode == 'grid' ? config.name ~ '__link--active' %}
    {% set listViewActiveClass = data.viewMode != 'grid' ? config.name ~ '__link--active' %}

    <a class="{{ config.name }}__link {{ gridViewActiveClass }} {{ config.name }}__grid-link" href="{{ gridHref ?: (functionExists('generatePath') ? generatePath(gridHref) : '') }}">
        {# {% include atom('icon') with {
            class: '',
            modifiers: ['grid'],
            data: {
                name: 'grid',
            },
        } only %} #}
    </a>
    <a class="{{ config.name }}__link {{ listViewActiveClass }} {{ config.name }}__list-link" href="{{ listHref ?: (functionExists('generatePath') ? generatePath(listHref) : '') }}">
        {# {% include atom('icon') with {
            class: '',
            data: {
                name: 'list',
            },
        } only %} #}
    </a>
{% endblock %}
